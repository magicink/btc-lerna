{
  "version": "1.0.10",
  "command": {
    "bootstrap": {
      "hoist": [
        "@babel/**",
        "@brandontom/**",
        "@rollup/**",
        "@storybook/**",
        "babel*",
        "core-js",
        "cross-env",
        "prettier",
        "react*",
        "rimraf",
        "rollup*",
        "runtime-regenerator",
        "storybook*",
        "webpack*",
        "yeoman*"
      ]
    },
    "publish": {
      "ignoreChanges": [
        ".gitignore",
        "*.md",
        "*.test.js",
        "test.js"
      ]
    }
  },
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true
}
