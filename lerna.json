{
  "version": "1.0.17",
  "command": {
    "bootstrap": {
      "hoist": [
        "@rollup/**",
        "@storybook/**",
        "core-js",
        "cross-env",
        "express",
        "prettier",
        "react*",
        "rimraf",
        "runtime-regenerator",
        "yeoman*"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*-lock.json",
        "*.lock",
        "*.md",
        "*.test.js",
        ".gitignore",
        ".prettierignore",
        "test.js"
      ]
    }
  },
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ]
}
